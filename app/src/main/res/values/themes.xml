<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MegaMatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.MegaMatch.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.MegaMatch.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.MegaMatch.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.MegaMatch.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.MegaMatch.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.MegaMatch.BodySmall</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MegaMatch.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MegaMatch.Button.Outlined</item>
        
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.MegaMatch.CardView</item>
        
        <!-- Text Input styles -->
        <item name="textInputStyle">@style/Widget.MegaMatch.TextInputLayout</item>
    </style>

    <style name="Theme.MegaMatch" parent="Base.Theme.MegaMatch" />

    <!-- Text appearances -->
    <style name="TextAppearance.MegaMatch.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MegaMatch.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MegaMatch.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MegaMatch.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MegaMatch.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MegaMatch.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MegaMatch.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.MegaMatch.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.MegaMatch.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Text Input styles -->
    <style name="Widget.MegaMatch.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface_dark</item>
        <item name="hintTextColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/neutral_400</item>
        <item name="boxStrokeColor">@color/teal_700</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
    
    <style name="Widget.MegaMatch.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>