<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/galaxy4"/>

    <!-- Blur Effect (Semi-Transparent Overlay) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6E000000"/>

    <!-- Main Content Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="הירשם כרכז"
            android:textColor="#FFC500"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10"
            />

        <EditText
            android:id="@+id/fullNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם מלא"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:backgroundTint="#FFFFFF"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"
            />

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם משתמש"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:backgroundTint="#FFFFFF"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>


        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:backgroundTint="#FFFFFF"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>

        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="אשר סיסמה"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:backgroundTint="#FFFFFF"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>

        <Spinner
            android:id="@+id/megamaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>


        <Button
            android:id="@+id/rakazRegisterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="registerRakaz"
            android:text="הירשם"
            android:textSize="20sp"
            android:backgroundTint="#6296FF"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</FrameLayout>
