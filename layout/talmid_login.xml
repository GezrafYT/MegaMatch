<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/galaxy3"/>

    <!-- Blur Effect (Semi-Transparent Overlay) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6E000000"/> <!-- Adjust transparency (AA = opacity) -->

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10"
            android:text="התחברות כתלמיד"
            android:textColor="#FFC500"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/schoolIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="8dp"
            android:hint="סימול ביה''ס"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/schoolNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="#B3FFFFFF"
            android:clickable="false"
            android:elevation="8dp"
            android:focusable="false"
            android:inputType="none"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="#FFFFFF"
            android:elevation="8dp"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/talmidLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6296FF"
            android:text="התחבר"
            android:textSize="20sp" />

    </LinearLayout>
</FrameLayout>
