<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/galaxy4"/>

    <!-- Blur Effect (Semi-Transparent Overlay) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6E000000"/> <!-- Adjust transparency (AA = opacity) -->

    <!-- Main Content Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="התחברות כרכז"
            android:textColor="#FFC500"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="10"
/>

        <EditText
            android:id="@+id/schoolIDInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סימול ביהס"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>


        <EditText
            android:id="@+id/schoolNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם ביהס: "
            android:inputType="none"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:backgroundTint="#B3FFFFFF"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"
            android:focusable="false"
            android:clickable="false"/>

        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם משתמש"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמה"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textSize="18sp"
            android:backgroundTint="#FFFFFF"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background"
            android:elevation="8dp"/>

        <Button
            android:id="@+id/rakazLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הירשם"
            android:textSize="20sp"
            android:backgroundTint="#6296FF"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/noAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="moveToRakazRegister"
            android:text="אין לי חשבון רכז מקצוע"
            android:textSize="15dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</FrameLayout>
